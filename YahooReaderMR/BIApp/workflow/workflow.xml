<workflow-app name="Yahoo_Reader_MapReduce" xmlns="uri:oozie:workflow:0.1">
    <start to="action1"/>
    <action name="action1">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.daoleen.fksis.bigdata.yahoo.Main</main-class>
            <arg>${namesFile}</arg>
            <arg>${university}</arg>
            <arg>${resultPath}</arg>
            <arg>${outputLogPath}</arg>
            <arg>${proxyHost}</arg>
            <arg>${proxyPort}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
